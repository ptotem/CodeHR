<%= nested_form_for(@client) do |f| %>
  <% if @client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
      <% @client.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row-fluid">
    <div class="span6">
      <div class="control-group">
        <%#= f.label :name,:class => "control-label" %><br />
        <label for="<%= @form[:name].to_s %>" class="control-label"><%= @form[:name].to_s %></label>
        <%= f.text_field :name %>
      </div>
      <div class="control-group">
        <%#= f.label :address,:class => "control-label" %><br />
        <label for="<%= @form[:address].to_s %>" class="control-label"><%= @form[:address].to_s %></label>
        <%= f.text_area(:address, size:"40x3") %>
      </div>

      <div class="control-group">
        <%#= f.label :email,:class => "control-label" %><br />
        <label for="<%= @form[:email].to_s %>" class="control-label"><%= @form[:email].to_s %></label>
        <%= f.text_field :email %>
      </div>
    </div>

    <div class="span6">
      <div class="control-group">
        <h3>Admin User</h3>
        <%= f.fields_for :admin_users do |au| %>
            <div class="control-group">
              <%#= au.label :email,:class => "control-label" %>
              <label for="<%= @form[:admin_email].to_s %>" class="control-label"><%= @form[:admin_email].to_s %></label>
              <div class="controls">
                <%= au.text_field :email %>
              </div>
            </div>

            <div class="control-group">
              <%#= au.label :password,:class => "control-label" %>
              <label for="<%= @form[:admin_password].to_s %>" class="control-label"><%= @form[:admin_password].to_s %></label>
              <div class="controls">
                <%= au.password_field :password %>
              </div>
            </div>

            <div class="control-group">
              <%#= au.label :password_confirmation,:class => "control-label" %>
              <label for="<%= @form[:admin_password_confirmation].to_s %>" class="control-label"><%= @form[:admin_password_confirmation].to_s %></label>
              <div class="controls">
                <%= au.password_field :password_confirmation %>
              </div>
            </div>

            <div class="control-group">
              <div class="controls">
                <%= au.link_to_remove "Remove this record" %>
              </div>
            </div>

        <% end %>
        <%= f.link_to_add "Add new record", :admin_users %></p>
      </div>
    </div>



  </div>

  <div class="form-actions">
    <%= f.submit @form_config[:submit], :class => "btn btn-info" %>
  </div>
<% end %>
