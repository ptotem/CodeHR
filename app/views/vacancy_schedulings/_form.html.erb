<div class="row-fluid">
  <%= nested_form_for(@vacancy_scheduling,html: {class: "form-horizontal"}) do |f| %>
      <% if @vacancy_scheduling.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@vacancy_scheduling.errors.count, "error") %> prohibited this vacancy_scheduling from being saved:</h2>

            <ul>
              <% @vacancy_scheduling.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <%= f.fields_for :interviewer_lists do |interviewer_lists| %>
          <div class="row-fluid">
            <div class="span6">
              <div class="control-group">
                <%= interviewer_lists.label :interview_type_id,:class => "control-label" %>
                <div class="controls">
                  <%= interviewer_lists.text_field :interview_type_id %>
                </div>
              </div>
            </div>
            <div class="span6">
              <div class="control-group">
                <%= interviewer_lists.label :interviewer,:class => "control-label" %>
                <div class="controls">
                  <%= interviewer_lists.text_field :interviewer %>
                </div>
              </div>
            </div>
          </div>

          <div class="row-fluid" style="margin-top: 1%;">
            <div class="span2">
              <div class="control-group">
                <label class="control-label">Fromdate <sub>(dd-mm-yyyy)</sub> </label>
              </div>
            </div>
            <div class="span4" style="margin-left: -5px;">
              <div class="control-group">
                  <div class="row-fluid input-append date">
                    <%= interviewer_lists.text_field :fromdate, :class=>"span6 date-picker", :"data-date-format"=>"dd-mm-yyyy" %>
                    <span class="add-on"><i class="icon-calendar"></i></span>
                  </div>
              </div>
            </div>

            <div class="span2">
              <div class="control-group">
                <label class="control-label" style="position: relative; left: 35px;">To date <sub>(dd-mm-yyyy)</sub> </label>
              </div>
            </div>
            <div class="span4">
              <div class="control-group">
                <div class="row-fluid input-append date">
                  <%= interviewer_lists.text_field :to_date, :class=>"span6 date-picker", :"data-date-format"=>"dd-mm-yyyy" %>
                  <span class="add-on"><i class="icon-calendar"></i></span>
                </div>
              </div>
            </div>

          </div>

          <div class="row-fluid">
            <div class="span6">
              <div class="control-group">
                <%= interviewer_lists.label :fromtime,:class => "control-label" %>
                <div class="input-append bootstrap-timepicker">
                    <div class="controls" style="position: relative">
                      <%#= interviewer_lists.time_select :fromtime %>
                      <%= interviewer_lists.text_field :fromtime, :class=>"input-small timepicker", :style=>"position: absolute; right: 56px;" %>
                      <span class="add-on" style="position: absolute; right: 29px;"><i class="icon-time"></i></span>
                    </div>
                </div>
              </div>
            </div>
            <div class="span6">
              <div class="control-group">
                <%= interviewer_lists.label :to_time,:class => "control-label" %>
                <div class="input-append bootstrap-timepicker">
                  <div class="controls" style="position: relative">
                    <%#= interviewer_lists.time_select :fromtime %>
                    <%= interviewer_lists.text_field :to_time, :class=>"input-small timepicker", :style=>"position: absolute; right: 56px;" %>
                    <span class="add-on" style="position: absolute; right: 29px;"><i class="icon-time"></i></span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!--<div class="row-fluid">-->
            <!---->
          <!--</div>-->

          <div class="control-group">
            <div class="controls">
              <%= interviewer_lists.link_to_remove "Remove this record" %>
            </div>
          </div>

      <% end %>
      <%= f.link_to_add "Add new record", :interviewer_lists %>
      <hr>

      <%= f.fields_for :ratings do |ratings| %>
          <div class="row-fluid">
            <div class="span6">
              <div class="control-group">
                <%= ratings.label :comments,:class => "control-label" %>
                <div class="controls">
                  <%= ratings.text_field :comments %>
                </div>
              </div>
            </div>
          </div>

          <div class="control-group">
            <div class="controls">
              <%= ratings.link_to_remove "Remove this record" %>
            </div>
          </div>

      <% end %>
      <%= f.link_to_add "Add new record", :ratings %>
      <hr>

      <% @fields = DynamicField.where(:oclass=>"VacancyMaster") %>
      <h3 class="header lighter blue">Dynamic Field</h3>
      <% @fields.each do |field| %>
          <div class="control-group">
            <%= f.label field.name.to_sym,:class => "control-label" %>
            <div class="controls">
              <%= f.send(field.type.to_sym, field.name.to_sym )%>
            </div>
          </div>
      <% end %>
      <hr>

      <div class="form-actions">
        <%= f.submit :class=>"btn btn-info" %>
      </div>

  <% end %>
</div>

<!--<script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>-->
<script src="/assets/bootstrap-datepicker.min.js"></script>

<script type="text/javascript" src="/assets/bootstrap-timepicker.min.js"></script>
<link rel="stylesheet" href="/assets/bootstrap-timepicker.css" />

<script>
    $(function(){

        label_left();
        add_dp();
        add_tp();


        $('body').on('click', function(){
            $('.date-picker').show();
            $('.timepicker').show();
        });

        $('a.add_nested_fields').on('click', function(){
            add_tp();
            label_left();
        });

    });

    function label_left(){
        $('.control-label').css('text-align','left');
    }

    function add_dp(){
        $('.date-picker').datepicker();
    }

    function add_tp(){
        $('.timepicker').timepicker({
            minuteStep: 1,
            showSeconds: false,
            showMeridian: false
        });
    }
</script>

