<script>
    $(function(){
        $('.control-label').css('text-align','left');
    })
</script>

<div class="row-fluid">
  <%= nested_form_for(@manpower_planning,html: {class: "form-horizontal"}) do |f| %>
      <% if @manpower_planning.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@manpower_planning.errors.count, "error") %> prohibited this manpower_planning from being saved:</h2>

            <ul>
              <% @manpower_planning.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="row-fluid">
        <div class="span12">
          <div class="control-group">
            <%#= raw custom_lable(@manpower_planning, :mp_code) %>
            <label for="<%= @form[:mp_code].to_s %>" class="control-label"><%= @form[:mp_code].to_s %></label>
            <div class="controls">
              <%= f.text_field :mp_code %>
            </div>
          </div>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span6">
          <div class="control-group">
            <%#= raw custom_lable(@manpower_planning, :period_from) %>
            <label for="<%= @form[:period_from].to_s %>" class="control-label"><%= @form[:period_from].to_s %></label>
            <div class="controls">
              <%#= f.date_select :period_from %>
              <div class="row-fluid input-append date">
                <%= f.text_field :period_from, :class=>"span6 date-picker" %>
                <span class="add-on"><i class="icon-calendar"></i></span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span6">
          <div class="control-group">
            <%#= raw custom_lable(@manpower_planning, :period_to) %>
            <label for="<%= @form[:period_to].to_s %>" class="control-label"><%= @form[:period_to].to_s %></label>
            <div class="controls">
              <%#= f.date_select :period_to %>
              <div class="row-fluid input-append date">
                <%= f.text_field :period_to, :class=>"span6 date-picker" %>
                <span class="add-on"><i class="icon-calendar"></i></span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span6">
          <div class="control-group">
            <%#= raw custom_lable(@manpower_planning, :requested_by) %>
            <label for="<%= @form[:requested_by].to_s %>" class="control-label"><%= @form[:requested_by].to_s %></label>
            <div class="controls">
              <%= f.text_field :requested_by %>
            </div>
          </div>
        </div>
        <div class="span6">
          <div class="control-group">
            <%#= raw custom_lable(@manpower_planning, :final_approved_number) %>
            <label for="<%= @form[:final_approved_number].to_s %>" class="control-label"><%= @form[:final_approved_number].to_s %></label>
            <div class="controls">
              <%= f.text_field :final_approved_number %>
            </div>
          </div>
        </div>
      </div>

      <hr>

      <%= f.fields_for :approval_mats do |approval_mats| %>
          <div class="control-group">
            <%#= approval_mats.label :employee_master_id,:class => "control-label" %>
            <label for="<%= @form[:employee_master_id].to_s %>" class="control-label"><%= @form[:employee_master_id].to_s %></label>
            <div class="controls">
              <%= approval_mats.text_field :employee_master_id %>
              <%= approval_mats.link_to_remove "Remove this task" %>
            </div>
          </div>

      <% end %>
      <%= f.link_to_add "Approval Mats", :approval_mats %>
      <hr>

      <%= f.fields_for :vacancy_masters do |vacancy_masters| %>
          <div class="row-fluid">
            <div class="span6">
              <div class="control-group">
                <%= vacancy_masters.label :vacancy_code,:class => "control-label" %>
                <div class="controls">
                  <%= vacancy_masters.text_field :vacancy_code %>
                </div>
              </div>
            </div>
            <div class="span6">
              <div class="control-group">
                <%= vacancy_masters.label :manpower_planning_id,:class => "control-label" %>
                <div class="controls">
                  <%= vacancy_masters.text_field :manpower_planning_id %>
                </div>
              </div>
            </div>
          </div>

          <div class="row-fluid">
            <div class="span6">
              <div class="control-group">
                <%= vacancy_masters.label :description,:class => "control-label" %>
                <div class="controls">
                  <%= vacancy_masters.text_field :description %>
                </div>
              </div>
            </div>
            <div class="span6">
              <div class="control-group">
                <%= vacancy_masters.label :status,:class => "control-label" %>
                <div class="controls">
                  <%= vacancy_masters.text_field :status %>
                </div>
              </div>
            </div>
          </div>

          <div class="row-fluid">
            <div class="span6">
              <div class="control-group">
                <%= vacancy_masters.label :sourcing_strategy,:class => "control-label" %>
                <div class="controls">
                  <%= vacancy_masters.text_field :sourcing_strategy %>
                </div>
              </div>
            </div>
            <div class="span6">
              <div class="control-group">
                <%= vacancy_masters.label :hr_rep,:class => "control-label" %>
                <div class="controls">
                  <%= vacancy_masters.text_field :hr_rep %>
                </div>
              </div>
            </div>
          </div>

          <div class="row-fluid">
            <div class="span6">
              <div class="control-group">
                <%= vacancy_masters.label :hiring_manager,:class => "control-label" %>
                <div class="controls">
                  <%= vacancy_masters.text_field :hiring_manager %>
                </div>
              </div>
            </div>
            <div class="span6">
              <div class="control-group">
                <%= vacancy_masters.label :ctc_range_from,:class => "control-label" %>
                <div class="controls">
                  <%= vacancy_masters.text_field :ctc_range_from %>
                </div>
              </div>
            </div>
          </div>

          <div class="row-fluid">
            <div class="span12">
              <div class="control-group">
                <%= vacancy_masters.label :ctc_range_to,:class => "control-label" %>
                <div class="controls">
                  <%= vacancy_masters.text_field :ctc_range_to %>
                </div>
              </div>
            </div>
          </div>

        <div class="control-group">
          <div class="controls">
            <%= vacancy_masters.link_to_remove "Remove this task" %>
          </div>
        </div>

      <% end %>
      <%= f.link_to_add "Vacancy Masters", :vacancy_masters %>
      <hr>



      <% @fields = DynamicField.where(:oclass=>"ManpowerPlanning") %>
      <h3 class="header lighter blue">Dynamic Field</h3>
      <% @fields.each do |field| %>
          <div class="control-group">
            <%= f.label field.name.to_sym,:class => "control-label" %>
            <div class="controls">
              <%= f.send(field.type.to_sym, field.name.to_sym )%>
            </div>
          </div>
      <% end %>


      <div class="form-actions">
        <%= f.submit :class=>"btn btn-info" %>
      </div>
  <% end %>

</div>

