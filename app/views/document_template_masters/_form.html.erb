<div class="row-fluid">
  <%= nested_form_for(@document_template_master,html: {class: "form-horizontal"}) do |f| %>
      <% if @document_template_master.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@document_template_master.errors.count, "error") %> prohibited this document_template_master from being saved:</h2>

            <ul>
              <% @document_template_master.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="row-fluid">
        <div class="span6">
          <div class="control-group">
            <%#= f.label :dt_code,:class => "control-label" %>
            <label for="<%= @form[:dt_code].to_s %>" class="control-label"><%= @form[:dt_code].to_s %></label>
            <div class="controls">
              <%= f.text_field :dt_code %>
            </div>
          </div>
        </div>
        <div class="span6">
          <div class="control-group">
            <%#= f.label :description,:class => "control-label" %>
            <label for="<%= @form[:description].to_s %>" class="control-label"><%= @form[:description].to_s %></label>
            <div class="controls">
              <%= f.text_area(:description, size:"40x3") %>
            </div>
          </div>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span6">
          <div class="control-group">
            <%#= f.label :related_to,:class => "control-label" %>
            <label for="<%= @form[:related_to].to_s %>" class="control-label"><%= @form[:related_to].to_s %></label>
            <div class="controls">
              <%= f.text_field :related_to %>
            </div>
          </div>
        </div>
        <div class="span6">
          <div class="control-group">
            <%#= f.label :dtfile,:class => "control-label" %>
            <label for="<%= @form[:dtfile].to_s %>" class="control-label"><%= @form[:dtfile].to_s %></label>
            <div class="controls">
              <%= f.file_field :dtfile %>
            </div>
          </div>
        </div>
      </div>

      <!--<div class="control-group">-->
      <%#= f.label :file %>
      <%#= f.text_field :file %>
      <!--</div>-->
      <hr>


      <%= f.fields_for :notification_masters do |notification_masters| %>
          <div class="row-fluid">
            <div class="span6">
              <div class="control-group">
                <%#= notification_masters.label :code,:class => "control-label" %>
                <label for="<%= @form[:notification_master_code].to_s %>" class="control-label"><%= @form[:notification_master_code].to_s %></label>
                <div class="controls">
                  <%= notification_masters.text_field :code %>
                </div>
              </div>
            </div>
            <div class="span6">
              <div class="control-group">
                <%#= notification_masters.label :title ,:class => "control-label"%>
                <label for="<%= @form[:notification_master_title].to_s %>" class="control-label"><%= @form[:notification_master_title].to_s %></label>
                <div class="controls">
                  <%= notification_masters.text_field :title %>
                </div>
              </div>
            </div>
          </div>

          <div class="row-fluid">
            <div class="span6">
              <div class="control-group">
                <%#= notification_masters.label :description,:class => "control-label" %>
                <label for="<%= @form[:notification_master_description].to_s %>" class="control-label"><%= @form[:notification_master_description].to_s %></label>
                <div class="controls">
                  <%= notification_masters.text_field :description %>
                </div>
              </div>
            </div>
            <div class="span6">
              <div class="control-group">
                <%#= notification_masters.label :type,:class => "control-label" %>
                <label for="<%= @form[:notification_master_type].to_s %>" class="control-label"><%= @form[:notification_master_type].to_s %></label>
                <div class="controls">
                  <%= notification_masters.text_field :type %>
                </div>
              </div>
            </div>
          </div>

          <div class="control-group">
            <div class="controls">
              <%= notification_masters.link_to_remove "Remove this record" %>
            </div>
          </div>

<% end %>
      <%= f.link_to_add "Add new record", :notification_masters %>
      <hr>



      <% @fields = DynamicField.where(:oclass=>"DocumentTemplateMaster") %>
      <h3 class="header lighter blue">Dynamic Field</h3>
      <% @fields.each do |field| %>
          <div class="control-group">
            <%= f.label field.name.to_sym,:class => "control-label" %>
            <div class="controls">
              <%= f.send(field.type.to_sym, field.name.to_sym )%>
            </div>
          </div>
      <% end %>


      <div class="form-actions">
        <%= f.submit @form_config[:submit], :class=>"btn btn-info" %>
      </div>


<% end %>
</div>



