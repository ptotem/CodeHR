<div class="row-fluid">
  <div class="span4">
    <%= link_to 'New Document Template Master', new_document_template_master_path, :class=>"btn btn-info" %>
  </div>
</div>

<br>

<div class="row-fluid">
  <div class="span12">
    <div class="table-header">Listing Document Template Masters</div>
    <table id="document_template_master_table" class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
            <th>Dt Code</th>
            <th>Description</th>
            <th>Related To</th>
            <!--<th>File</th>-->
            <th></th>
            <th></th>
            <th></th>
          </tr>
      </thead>

      <tbody>
          <% @document_template_masters.each do |document_template_master| %>
              <tr>
                <td><%= document_template_master.dt_code %></td>
                <td><%= document_template_master.description %></td>
                <td><%= document_template_master.related_to %></td>
                <!--<td><%#= document_template_master.file %></td>-->
                <td><%= link_to 'Show', document_template_master %></td>
                <td><%= link_to 'Edit', edit_document_template_master_path(document_template_master) %></td>
                <td><%= link_to 'Destroy', document_template_master, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= javascript_include_tag "jquery.dataTables.min" %>
<%= javascript_include_tag "jquery.dataTables.bootstrap" %>
<%= javascript_include_tag "custom_dataTable" %>


<script>
    $(function(){
        apply_dataTable('#document_template_master_table', '#document_template_master_table_wrapper','#document_template_master_table_length', '#document_template_master_table_filter');
    });
</script>
