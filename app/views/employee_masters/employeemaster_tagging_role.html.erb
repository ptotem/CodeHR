<%= form_tag :role_tag do %>
    <div class="control-group">
        <%= hidden_field_tag :id, @employee_master._id %>
        <%= select_tag "role_id", options_from_collection_for_select(Role.all,"id","name") %>
        <%= hidden_field_tag :process_id, params[:process_id] %>
        <%= hidden_field_tag :seq, params[:seq] %>
    </div>
    <%= submit_tag "Confirm" %>
<% end %>