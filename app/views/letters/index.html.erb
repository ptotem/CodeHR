<h1>Listing Letters</h1>

<table style="border-spacing: 20px; border-collapse: separate">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @letters.each do |letter| %>
      <tr>
        <!-- <td><%= letter._id %></td> -->
        <td><%= link_to letter.file_file_name, letter.file.url %></td>
        <td><%= link_to 'Show', letter %></td>
        <td><%= link_to 'Edit', edit_letter_path(letter) %></td>
        <td><%= link_to 'Destroy', letter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%=  %></td>
      </tr>
    <% end %>
  </tbody>

