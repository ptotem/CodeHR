<div class="row-fluid">
  <%= nested_form_for(@notification_master,html: {class: "form-horizontal"}) do |f| %>
      <% if @notification_master.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@notification_master.errors.count, "error") %> prohibited this notification_master from being saved:</h2>

            <ul>
              <% @notification_master.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="control-group">
       <%= f.label :code,:class => "control-label"  %>
        <div class="controls">
          <%= f.text_field :code %>
        </div>
      </div>
      
      <div class="control-group">
        <%= f.label :title,:class => "control-label"  %>
        <div class="controls">
          <%= f.text_field :title %>
        </div>
      </div>
      
      <div class="control-group">
        <%= f.label :description,:class => "control-label"  %>
        <div class="controls">
          <%= f.text_area :description %>
        </div>
      </div>
      
      <div class="control-group">
        <%= f.label :type,:class => "control-label"  %>
        <div class="controls">
          <%= f.text_field :type %>
        </div>
      </div>
      <hr>

      <%= f.fields_for :notification_details do |notification_details| %>
          <div class="control-group">
            <%= notification_details.label :notification_master_id,:class => "control-label" %>
            <div class="controls">
              <%= notification_details.text_field :notification_master_id %>
              <%= notification_details.link_to_remove "Remove this task" %>
            </div>
          </div>

          <div class="control-group">
            <%= notification_details.label :event,:class => "control-label" %>
            <div class="controls">
              <%= notification_details.text_field :event %>
              <%= notification_details.link_to_remove "Remove this task" %>
            </div>
          </div>

          <div class="control-group">
            <%= notification_details.label :sender,:class => "control-label" %>
            <div class="controls">
              <%= notification_details.text_field :sender %>
              <%= notification_details.link_to_remove "Remove this task" %>
            </div>
          </div>

      <% end %>
      <%= f.link_to_add "Notification Details", :notification_details %>
      <hr>


      <%= f.fields_for :email_details do |email_details| %>
      <div class="control-group">
        <%= email_details.label :event,:class => "control-label" %>
        <div class="controls">
          <%= email_details.text_field :event %>
          <%= email_details.link_to_remove "Remove this task" %>
        </div>
      </div>

      <div class="control-group">
        <%= email_details.label :sender,:class => "control-label" %>
        <div class="controls">
          <%= email_details.text_field :sender %>
          <%= email_details.link_to_remove "Remove this task" %>
        </div>
      </div>

          <div class="control-group">
            <%= email_details.label :attachment1,:class => "control-label" %>
            <div class="controls">
              <%= email_details.file_field :attachment1 %>
              <%= email_details.link_to_remove "Remove this task" %>
            </div>
          </div>

          <div class="control-group">
            <%= email_details.label :attachment2,:class => "control-label" %>
            <div class="controls">
              <%= email_details.file_field :attachment2 %>
              <%= email_details.link_to_remove "Remove this task" %>
            </div>
          </div>

          <div class="control-group">
            <%= email_details.label :attachment3,:class => "control-label" %>
            <div class="controls">
              <%= email_details.file_field :attachment3 %>
              <%= email_details.link_to_remove "Remove this task" %>
            </div>
          </div>

          <div class="control-group">
            <%= email_details.label :attachment4,:class => "control-label" %>
            <div class="controls">
              <%= email_details.file_field :attachment4 %>
              <%= email_details.link_to_remove "Remove this task" %>
            </div>
          </div>

          <div class="control-group">
            <%= email_details.label :attachment5,:class => "control-label" %>
            <div class="controls">
              <%= email_details.file_field :attachment5 %>
              <%= email_details.link_to_remove "Remove this task" %>
            </div>
          </div>

  <% end %>
  <%= f.link_to_add "Email Details", :email_details %>
  <hr>


      <% @fields = DynamicField.where(:oclass=>"NotificationMaster") %>
      <h3 class="header lighter blue">Dynamic Field</h3>
      <% @fields.each do |field| %>
          <div class="control-group">
            <%= f.label field.name.to_sym,:class => "control-label" %>
            <div class="controls">
              <%= f.send(field.type.to_sym, field.name.to_sym )%>
            </div>
          </div>
      <% end %>


      <div class="form-actions">
        <%= f.submit :class=>"btn btn-info" %>
      </div>
  <% end %>

</div>

