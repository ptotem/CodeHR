<div class="row-fluid">
  <div class="span4">
    <%= link_to 'New Process Master', new_process_master_path, :class=>"btn btn-info" %>
  </div>
</div>

<br>

<div class="row-fluid">
  <div class="span12">
    <div class="table-header">Listing Process Masters</div>
    <table id="process_master_table" class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
            <th>Name</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
      </thead>

      <tbody>
          <% @process_masters.each do |process_master| %>
              <tr>
                <td><%= process_master.name %></td>
                <td><%= link_to 'Show', process_master %></td>
                <td><%= link_to 'Edit', edit_process_master_path(process_master) %></td>
                <td><%= link_to 'Destroy', process_master, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= javascript_include_tag "jquery.dataTables.min" %>
<%= javascript_include_tag "jquery.dataTables.zbootstrap" %>
<%= javascript_include_tag "custom_dataTable" %>


<script>
    $(function(){
        apply_dataTable('#process_master_table', '#process_master_table_wrapper','#process_master_table_length', '#process_master_table_filter');
    });
</script>
