<%= form_for @process_tr do |f| %>
  <% if @process_tr.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@process_tr.errors.count, "error") %> prohibited this process_tr from being saved:</h2>

      <ul>
      <% @process_tr.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="row-fluid">
      <div class="span3">
        <div class="control-group">
          <label class="control-label">Process Code</label>
          <div class="controls">
            <%= f.text_field :code, :value => @process_tr_code,:disabled=>'disabled' %>
          </div>
        </div>
      </div>
      <div class="span3">
        <div class="control-group">
          <label for="<%= @form[:name].to_s %>" class="control-label"><%= @form[:name].to_s %></label>
          <div class="controls">
            <%= f.text_field :name %>
          </div>
        </div>
      </div>
      <div class="span3">
        <label class="control-label">Process Group</label>
          <div class="control-group">
            <%#= f.hidden_field :usr_id, "52bd2b2fce10bb9248000001" %>
            <%= f.select :name, options_from_collection_for_select(ProcessMaster.all,'id','name'), {:include_blank => "Select"}, {:class => "chzn-select"}  %>
          </div>
      </div>
    </div>

    <div class="row-fluid">

      <div class="span4 my_class" style="display: none">
        <div class="control-group">
          <label class="control-label">Object</label>
          <%= text_field_tag :obj_id %>
        </div>
      </div>
    </div>


  <div class="actions">
    <%= f.submit @form_config[:submit], :class=>"btn btn-info" %>
  </div>
<% end %>

<!--<link rel="stylesheet" href="/assets/chosen.css" />-->
<script type="text/javascript" src="/assets/chosen.jquery.min.js"></script>

<script>
    $(function(){
        $(".chzn-select").chosen();
        $(".chzn-select-deselect").chosen({allow_single_deselect:true});

        $('.chzn-select').on('change', function(){
            this_text = $('.chzn-select option:selected').html();

            if ( (this_text.indexOf("Updation") >= 0) || (this_text.toLowerCase().indexOf("Updation") >= 0) ){
                $('.my_class').show();
            }
            else{
                $('.my_class').hide();
            }
        });
    });
</script>
