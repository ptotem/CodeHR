<div class="row-fluid">
  <%= nested_form_for(@compensation_component, :url => (@new ? generic_create_path(@compensation_component.class) : generic_update_path(@compensation_component.class,@compensation_component.id)), html: {class: "form-horizontal"}) do |f| %>
      <% if @compensation_component.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@compensation_component.errors.count, "error") %> prohibited this compensation_component from being saved:</h2>

            <ul>
              <% @compensation_component.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="row-fluid">
        <div class="span6">
          <div class="control-group">
            <%#= raw custom_lable(@compensation_component, :final_ctc_fixed) %>
            <label for="Vacancy" class="control-label">Vacancy</label>
            <div class="controls">
              <%= f.select :vacancy_master_id,options_from_collection_for_select(VacancyMaster.all, :id, :vacancy_code) %>
            </div>
          </div>
        </div>
        <div class="span6">
          <div class="control-group">
            <%#= raw custom_lable(@compensation_component, :final_ctc_varriable) %>
            <label for="Candidate" class="control-label">Candidate</label>
            <div class="controls">
              <%= f.select :candidate_master_id,options_from_collection_for_select(CandidateMaster.all, :id, :candidate_name) %>
            </div>
          </div>
        </div>
      </div>



      <div class="row-fluid">
        <div class="span4">
          <div class="control-group">
            <%#= raw custom_lable(@compensation_component, :final_ctc_fixed) %>
            <label for="<%= @form[:final_ctc_fixed].to_s %>" class="control-label"><%= @form[:final_ctc_fixed].to_s %></label>
            <div class="controls">
              <%= text_field_tag :cf %>
            </div>
          </div>
        </div>
        <div class="span3">
          <div class="control-group">
            <%#= raw custom_lable(@compensation_component, :final_ctc_fixed) %>
            <label for="<%= @form[:final_ctc_varriable].to_s %>" class="control-label"><%= @form[:final_ctc_varriable].to_s %></label>
            <div class="controls">
              <%= text_field_tag :cv %>
            </div>
          </div>
        </div>
        <div class="span4">
          <div class="control-group">
            <%#= raw custom_lable(@compensation_component, :final_ctc_varriable) %>
            <label for="Total" class="control-label">Total</label>
            <div class="controls">
              <%= text_field_tag :cal_total %>
            </div>
          </div>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span4">
          <div class="control-group">
            <%#= raw custom_lable(@compensation_component, :final_ctc_fixed) %>

            <label for="Calculated" class="control-label">Calculated Fixed</label>
            <div class="controls">
              <%= f.number_field :final_ctc_fixed %>
            </div>
          </div>
        </div>
        <div class="span3">
          <div class="control-group">
            <%#= raw custom_lable(@compensation_component, :final_ctc_varriable) %>
            <label for="Calculated" class="control-label">Calculated Variable</label>

            <div class="controls">
              <%= f.number_field :final_ctc_varriable %>
            </div>
          </div>
        </div>
        <div class="span4">
          <div class="control-group">
            <%#= raw custom_lable(@compensation_component, :final_ctc_varriable) %>
            <label for="Total" class="control-label">Total</label>
            <div class="controls">
              <%= text_field_tag :decided_total %>
            </div>
          </div>
        </div>
      </div>
      <hr>
      <div class="row-fluid">
        <div class="span12">
          <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                <th><label for="SCLabel" class="control-label">S.C.Label</label></th>
                <th><label for="Fixed" class="control-label">Related To</label></th>
                <th><label for="Fixed" class="control-label">Associated To To</label></th>
                <th><label for="Variable" class="control-label">Formula</label></th>
                <th><label for="Variable" class="control-label">Fixed Value</label></th>
                </tr>
            </thead>>
            <tbody>
            <%= f.fields_for :formula_lists do |formula_lists| %>
                <tr class="salary_comp_row">
                  <td><%= formula_lists.text_field :salary_component_id,{:class => "scomp"} %></td>
                  <td><%= formula_lists.select :related_to, options_for_select(["%age Fixed","%age Variable","Fixed Amount"]+SalaryComponentMaster.all.map{|i| i.name}),{},{:class => "related_to"} %></td>
                  <td><%= formula_lists.select :associated_to, options_for_select(["Fixed","Variable"]),{},{:class => "associated_to"} %></td>
                  <td><%= formula_lists.text_field :internal_formula,{:class => "formula"} %></td>
                  <td><%= formula_lists.text_field :fixed_value,{:class => "net_val"} %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <% @fields = DynamicField.where(:oclass=>"CompensationComponent") %>
      <h3 class="header lighter blue">Dynamic Field</h3>
      <% @fields.each do |field| %>
          <div class="control-group">
            <%= f.label field.name.to_sym,:class => "control-label" %>
            <div class="controls">
              <%= f.send(field.type.to_sym, field.name.to_sym )%>
            </div>
          </div>
      <% end %>

      <% if !params[:process_id].nil? %>
          <%= hidden_field_tag :process_id, params[:process_id] %>
          <%= hidden_field_tag :seq, params[:seq] %>
      <% end %>

      <div class="form-actions">
        <%= f.submit :class=>"btn btn-info"  %>
      </div>
  <% end %>
</div>

<script type="text/javascript" charset="utf-8">
    $( "input[type=text]" ).on("focusout",function() {
        calculate_salary()
    });

    function calculate_salary(){
        var total_fixed=0;
        var tf=0;
        var tv=0;
        $('.salary_comp_row').each(function(i,v){
            var related_to;
            if($(v).find('.related_to').val()=="%age Fixed"){
                related_to = $("#cf").val().length==0?$("#compensation_component_final_ctc_fixed").val():$("#cf").val();
                formula=$(v).find('.formula').val();
                console.log(formula);
                net_sal= (parseInt(related_to)*parseInt(formula))/100;
            }else if($(v).find('.related_to').val()=="%age Variable"){
                related_to = $("#cv").val().length==0?$("#compensation_component_final_ctc_varriable").val():$("#cv").val();
                formula=$(v).find('.formula').val();
                console.log(formula);
                net_sal= (parseInt(related_to)*parseInt(formula))/100;
            }else if($(v).find('.related_to').val()=="Fixed Amount"){
                net_sal = $(v).find('.net_val').val();
            }else{
                a= $(v).find('.related_to').val();
                related_to=$('input[type=text][value="'+a+'"]').parent().parent().find('.net_val').val();
                formula=$(v).find('.formula').val();
                console.log(formula);
                net_sal= (parseInt(related_to)*parseInt(formula))/100;
            }



            net_sal= net_sal || 0

            total_fixed=total_fixed+parseInt(net_sal);
            $(v).find('.net_val').val(net_sal);
            if($(v).find('.associated_to').val()=="Fixed"){
                v= parseInt($(v).find('.net_val').val());
                v=v || 0;
                tf=tf+v
            }else if($(v).find('.associated_to').val()=="Variable"){
                v= parseInt($(v).find('.net_val').val());
                v=v || 0;
                tv=tv+v;
            }else{
            }
        });
        $("#compensation_component_final_ctc_fixed").val(tf);
        $("#compensation_component_final_ctc_varriable").val(tv);
        $("#decided_total").val(tf+tv);
    }
</script>


