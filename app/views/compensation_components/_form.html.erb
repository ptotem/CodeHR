<div class="row-fluid">
  <%= nested_form_for(@compensation_component,html: {class: "form-horizontal"}) do |f| %>
      <% if @compensation_component.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@compensation_component.errors.count, "error") %> prohibited this compensation_component from being saved:</h2>

            <ul>
              <% @compensation_component.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="row-fluid">
        <div class="span6">
          <div class="control-group">
            <%#= raw custom_lable(@compensation_component, :final_ctc_fixed) %>
            <label for="<%= @form[:final_ctc_fixed].to_s %>" class="control-label"><%= @form[:final_ctc_fixed].to_s %></label>
            <div class="controls">
              <%= f.number_field :final_ctc_fixed %>
            </div>
          </div>
        </div>
        <div class="span6">
          <div class="control-group">
            <%#= raw custom_lable(@compensation_component, :final_ctc_varriable) %>
            <label for="<%= @form[:final_ctc_varriable].to_s %>" class="control-label"><%= @form[:final_ctc_varriable].to_s %></label>
            <div class="controls">
              <%= f.number_field :final_ctc_varriable %>
            </div>
          </div>
        </div>
      </div>

      <hr>

      <%= f.fields_for :formula_lists do |formula_lists| %>
          <div class="row-fluid">
            <div class="span6">
              <div class="control-group">
                <%#= formula_lists.label :salary_component_id,:class => "control-label" %>
                <label for="<%= @form[:salary_component_id].to_s %>" class="control-label"><%= @form[:salary_component_id].to_s %></label>
                <div class="controls">
                  <%= formula_lists.text_field :salary_component_id %>
                </div>
              </div>
            </div>
            <div class="span6">
              <div class="control-group">
                <%#=formula_lists.label :fixed_value ,:class => "control-label"%>
                <label for="<%= @form[:fixed_value].to_s %>" class="control-label"><%= @form[:fixed_value].to_s %></label>
                <div class="controls">
                  <%= formula_lists.text_field :fixed_value %>
                </div>
              </div>
            </div>
          </div>

          <div class="row-fluid">
            <div class="span6">
              <div class="control-group">
                <%#= formula_lists.label :internal_formula,:class => "control-label" %>
                <label for="<%= @form[:internal_formula].to_s %>" class="control-label"><%= @form[:internal_formula].to_s %></label>
                <div class="controls">
                  <%= formula_lists.text_field :internal_formula %>
                </div>
              </div>
            </div>
            <div class="span6">
              <div class="control-group">
                <%#= formula_lists.label :fixed,:class => "control-label" %>
                <label for="<%= @form[:fixed].to_s %>" class="control-label"><%= @form[:fixed].to_s %></label>
                <div class="controls">
                  <label>
                    <%= formula_lists.check_box :fixed,'name' => 'form-field-checkbox' %>
                    <%= formula_lists.label :fixed,:class => "lbl" %>
                  </label>
                </div>
              </div>
            </div>
          </div>

          <div class="control-group">
            <div class="controls">
              <%= formula_lists.link_to_remove "Remove this record" %>
            </div>
          </div>

      <% end %>
      <%= f.link_to_add "Add new record", :formula_lists %>
      <hr>


      <% @fields = DynamicField.where(:oclass=>"CompensationComponent") %>
      <h3 class="header lighter blue">Dynamic Field</h3>
      <% @fields.each do |field| %>
          <div class="control-group">
            <%= f.label field.name.to_sym,:class => "control-label" %>
            <div class="controls">
              <%= f.send(field.type.to_sym, field.name.to_sym )%>
            </div>
          </div>
      <% end %>

      <div class="form-actions">
        <%= f.submit :class=>"btn btn-info"  %>
      </div>
  <% end %>
</div>


