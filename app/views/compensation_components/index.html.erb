<div class="row-fluid">
  <div class="span4">
    <%= link_to 'New Compensation Component', new_compensation_component_path, :class=>"btn btn-info" %>
  </div>
</div>

<br>

<div class="row-fluid">
  <div class="span12">
    <div class="table-header">Listing Compensation Components</div>
    <table id="component_master_table" class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
            <th>Final CTC Fixed</th>
            <th>Final CTC Variable</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
      </thead>

      <tbody>
          <% @compensation_components.each do |compensation_component| %>
              <tr>
                <td><%= compensation_component.final_ctc_fixed %></td>
                <td><%= compensation_component.final_ctc_varriable %></td>
                <td><%= link_to 'Show', compensation_component %></td>
                <td><%= link_to 'Edit', edit_compensation_component_path(compensation_component) %></td>
                <td><%= link_to 'Destroy', compensation_component, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= javascript_include_tag "jquery.dataTables.min" %>
<%= javascript_include_tag "jquery.dataTables.zbootstrap" %>
<%= javascript_include_tag "custom_dataTable" %>


<script>
    $(function(){
        apply_dataTable('#component_master_table', '#component_master_table_wrapper','#component_master_table_length', '#component_master_table_filter');
    });
</script>
