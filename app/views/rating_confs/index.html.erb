<div class="row-fluid">
  <div class="span4">
    <%= link_to 'New Rating Conf', new_rating_conf_path, :class=>"btn btn-info" %>
  </div>
</div>

<br>

<div class="row-fluid">
    <div class="span12">
      <div class="table-header">Listing Rating Confs</div>
      <table id="rating_confs_list" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
              <th>Col Name</th>
              <th>Col Lable</th>
              <th class="center">Col Validation</th>
              <th>Col Type</th>
              <th>Col Sequence</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
        </thead>

        <tbody>
            <% @rating_confs.each do |rating_conf| %>
                <tr>
                  <td><%= rating_conf.col_name %></td>
                  <td><%#= best_in_place rating_conf, :col_lable, :type => :input %><%= rating_conf.col_lable %></td>
                  <td class='center'>
                    <label>
                        <%= check_box_tag 'col_validation' %>
                        <span class="lbl"></span>
                    </label>
                  </td>
                  <td><%= rating_conf.col_type %></td>
                  <td><%#= best_in_place rating_conf, :col_sequence, :type => :input %><%= rating_conf.col_sequence %></td>

                  <td><%= link_to 'Show', rating_conf %></td>
                  <td><%= link_to 'Edit', edit_rating_conf_path(rating_conf) %></td>
                  <td><%= link_to 'Destroy', rating_conf, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
            <% end %>
        </tbody>
      </table>
    </div>
</div>

<!--<script type="text/javascript" src="//code.jquery.com/jquery-1.10.2.min.js"></script>-->
<!--<script src="/assets/best_in_place.js"></script>-->

<%= javascript_include_tag "jquery.dataTables.min" %>
<%= javascript_include_tag "jquery.dataTables.bootstrap" %>
<%= javascript_include_tag "custom_dataTable" %>

<script>
    $(function(){
            // /* Activating Best In Place */
            //jQuery(".best_in_place").best_in_place();

        apply_dataTable('#rating_confs_list', '#rating_confs_list_wrapper','#rating_confs_list_length', '#rating_confs_list_filter');
    });
</script>