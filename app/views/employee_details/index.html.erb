  <div class="span12">
    <div class="table-header">Listing Employee Details</div>
    <table id="employee_detail_table" class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
            <th>Current Designation</th>
            <th>Job</th>
            <th>Band</th>
            <th>Total Work Exp (years)</th>
            <th>Total Work Exp (months)</th>
