    <th>Remarks 2</th>
    <th>Remarks 3</th>
    <th>Remarks 4</th>
    <th>Remarks 5</th>
  </tr>

<% @employee_details.each do |employee_detail| %>
  <tr>
    <td><%= employee_detail.current_designation %></td>
    <td><%= employee_detail.job_role_id %></td>
    <td><%= employee_detail.band_id %></td>
    <td><%= employee_detail.total_work_exp_years %></td>
    <td><%= employee_detail.total_work_exp_months %></td>
    <td><%= employee_detail.personal_email %></td>
    <td><%= employee_detail.contact_numbers %></td>
    <td><%= employee_detail.personal_address %></td>
    <td><%= employee_detail.bank_name %></td>
    <td><%= employee_detail.account_number %></td>
    <td><%= employee_detail.rf_no %></td>
    <td><%= employee_detail.esic_no %></td>
    <td><%= employee_detail.pan_no %></td>
    <td><%= employee_detail.blood_group %></td>
    <td><%= employee_detail.date_of_leaving %></td>
    <td><%= employee_detail.nature_of_separation %></td>
    <td><%= employee_detail.remarks_1 %></td>
    <td><%= employee_detail.remarks_2 %></td>
    <td><%= employee_detail.remarks_3 %></td>
    <td><%= employee_detail.remarks_4 %></td>
    <td><%= employee_detail.remarks_5 %></td>
    <td><%= link_to 'Show', employee_detail %></td>
    <td><%= link_to 'Edit', edit_employee_detail_path(employee_detail) %></td>
    <td><%= link_to 'Destroy', employee_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

