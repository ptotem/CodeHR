<div class="row-fluid">
  <%= nested_form_for(@vendor_master,html: {class: "form-horizontal"}) do |f| %>
      <% if @vendor_master.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@vendor_master.errors.count, "error") %> prohibited this vendor_master from being saved:</h2>

            <ul>
              <% @vendor_master.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="row-fluid">
        <div class="span6">
          <div class="control-group">
            <%= f.label :vendor_code,:class => "control-label" %>
            <div class="controls">
              <%= f.text_field :vendor_code %>
            </div>
          </div>
        </div>
        <div class="span6">
          <div class="control-group">
            <%#= f.label :vendor_name ,:class => "control-label"%>
            <%= raw custom_lable(@vendor_master, :vendor_name) %>
            <div class="controls">
              <%= f.text_field :vendor_name %>
            </div>
          </div>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span6">
          <div class="control-group">
            <%#= f.label :vendor_type,:class => "control-label" %>
            <%= raw custom_lable(@vendor_master, :vendor_type) %>
            <div class="controls">
              <%= f.text_field :vendor_type %>
            </div>
          </div>
        </div>
        <div class="span6">
          <div class="control-group">
            <%#= f.label :office_phone_number,:class => "control-label" %>
            <%= raw custom_lable(@vendor_master, :office_phone_number) %>
            <div class="controls">
              <%= f.text_field :office_phone_number %>
            </div>
          </div>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span6">
          <div class="control-group">
            <%= f.label :office_fax_number1,:class => "control-label" %>
            <div class="controls">
              <%= f.text_field :office_fax_number1 %>
            </div>
          </div>
        </div>
        <div class="span6">
          <div class="control-group">
            <%= f.label :office_fax_number2,:class => "control-label" %>
            <div class="controls">
              <%= f.text_field :office_fax_number2 %>
            </div>
          </div>
        </div>
      </div>

      <hr>

      <%= f.fields_for :vaddresses do |vaddresses| %>
          <div class="row-fluid">
            <div class="span6">
              <div class="control-group">
                <%= vaddresses.label :city,:class => "control-label" %>
                <div class="controls">
                  <%= vaddresses.text_field :city %>
                </div>
              </div>
            </div>
            <div class="span6">
              <div class="control-group">
                <%= vaddresses.label :state,:class => "control-label" %>
                <div class="controls">
                  <%= vaddresses.text_field :state %>
                </div>
              </div>
            </div>
          </div>

          <div class="control-group">
            <div class="controls">
              <%= vaddresses.link_to_remove "Remove this task" %>
            </div>
          </div>

      <% end %>
      <%= f.link_to_add "VAddresses", :vaddresses %>
      <hr>

      <%= f.fields_for :contact_persons do |contact_persons| %>
          <div class="row-fluid">
            <div class="span6">
              <div class="control-group">
                <%= contact_persons.label :name,:class => "control-label" %>
                <div class="controls">
                  <%= contact_persons.text_field :name %>
                </div>
              </div>
            </div>
            <div class="span6">
              <div class="control-group">
                <%= contact_persons.label :designation,:class => "control-label" %>
                <div class="controls">
                  <%= contact_persons.text_field :designation %>
                </div>
              </div>
            </div>
          </div>

          <div class="row-fluid">
            <div class="span6">
              <div class="control-group">
                <%= contact_persons.label :phone1,:class => "control-label" %>
                <div class="controls">
                  <%= contact_persons.text_field :phone1 %>
                </div>
              </div>
            </div>
            <div class="span6">
              <div class="control-group">
                <%= contact_persons.label :phone2,:class => "control-label" %>
                <div class="controls">
                  <%= contact_persons.text_field :phone2 %>
                </div>
              </div>
            </div>
          </div>

          <div class="control-group">
            <div class="controls">
              <%= contact_persons.link_to_remove "Remove this task" %>
            </div>
          </div>

      <% end %>
      <%= f.link_to_add "Contact Persons", :contact_persons %>
      <hr>
      

      <% @fields = DynamicField.where(:oclass=>"VacancyScheduling") %>
      <h3 class="header lighter blue">Dynamic Field</h3>
      <% @fields.each do |field| %>
          <div class="control-group">
            <%= f.label field.name.to_sym,:class => "control-label" %>
            <div class="controls">
              <%= f.send(field.type.to_sym, field.name.to_sym )%>
            </div>
          </div>
      <% end %>


      <div class="form-actions">
        <%= f.submit :class=>"btn btn-info" %>
      </div>
  <% end %>

</div>

