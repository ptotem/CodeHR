<div class="row-fluid">
  <div class="span4">
    <%= link_to 'New Vendor Master', new_vendor_master_path, :class=>"btn btn-info" %>
  </div>
</div>

<br>

<div class="row-fluid">
  <div class="span12">
    <div class="table-header">Listing Vendor Masters</div>
    <table id="vendor_master_table" class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
            <th>Vendor Code</th>
            <th>Vendor Name</th>
            <th>Vendor Type</th>
            <th>Office Phone Number</th>
            <th>Office Fax Number1</th>
            <th>Office Fax Number2</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
      </thead>

      <tbody>
          <% @vendor_masters.each do |vendor_master| %>
              <tr>
                <td><%= vendor_master.vendor_code %></td>
                <td><%= vendor_master.vendor_name %></td>
                <td><%= vendor_master.vendor_type %></td>
                <td><%= vendor_master.office_phone_number %></td>
                <td><%= vendor_master.office_fax_number1 %></td>
                <td><%= vendor_master.office_fax_number2 %></td>
                <td><%= link_to 'Show', vendor_master %></td>
                <td><%= link_to 'Edit', edit_vendor_master_path(vendor_master) %></td>
                <td><%= link_to 'Destroy', vendor_master, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= javascript_include_tag "jquery.dataTables.min" %>
<%= javascript_include_tag "jquery.dataTables.bootstrap" %>
<%= javascript_include_tag "custom_dataTable" %>


<script>
    $(function(){
        apply_dataTable('#vendor_master_table', '#vendor_master_table_wrapper','#vendor_master_table_length', '#vendor_master_table_filter');
    });
</script>
