<div class="row-fluid">
  <div class="span4">
    <%= link_to 'New Vacancy Master', new_vacancy_master_path, :class=>"btn btn-info" %>
  </div>
</div>

<br>

<div class="row-fluid">
  <div class="span12">
    <div class="table-header">Listing Vacancy Masters</div>
    <table id="vacancy_master_table" class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
            <th>Vacancy Code</th>
            <!--<th>Manpower Planning</th>-->
            <th>Description</th>
            <th>Status</th>
            <th>Sourcing Strategy</th>
            <th>HR Rep</th>
            <th>Hiring Manager</th>
            <th>CTC Range From</th>
            <th>CTC Range To</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
      </thead>

      <tbody>
          <% @vacancy_masters.each do |vacancy_master| %>
              <tr>
                <td><%= vacancy_master.vacancy_code %></td>
                <!--<td><%#= vacancy_master.manpower_planning_id %></td>-->
                <td><%= vacancy_master.description %></td>
                <td><%= vacancy_master.status %></td>
                <td><%= vacancy_master.sourcing_strategy %></td>
                <td><%= vacancy_master.hr_rep %></td>
                <td><%= vacancy_master.hiring_manager %></td>
                <td><%= vacancy_master.ctc_range_from %></td>
                <td><%= vacancy_master.ctc_range_to %></td>
                <td><%= link_to 'Show', vacancy_master %></td>
                <td><%= link_to 'Edit', edit_vacancy_master_path(vacancy_master) %></td>
                <td><%= link_to 'Destroy', vacancy_master, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= javascript_include_tag "jquery.dataTables.min" %>
<%= javascript_include_tag "jquery.dataTables.bootstrap" %>
<%= javascript_include_tag "custom_dataTable" %>


<script>
    $(function(){
        apply_dataTable('#vacancy_master_table', '#vacancy_master_table_wrapper','#vacancy_master_table_length', '#vacancy_master_table_filter');
    });
</script>
