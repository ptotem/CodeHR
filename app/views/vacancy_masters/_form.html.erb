<div class="row-fluid">
  <%= nested_form_for(@vacancy_master,html: {class: "form-horizontal"}) do |f| %>
      <% if @vacancy_master.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@vacancy_master.errors.count, "error") %> prohibited this vacancy_master from being saved:</h2>

            <ul>
              <% @vacancy_master.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="row-fluid">
        <div class="span6">
          <div class="control-group">
            <%= raw custom_lable(@vacancy_master, :vacancy_code) %>
            <div class="controls">
              <%= f.text_field :vacancy_code %>
            </div>
          </div>
        </div>
        <div class="span6">
          <div class="control-group">
            <%= f.label :manpower_planning_id,:class => "control-label" %>
            <div class="controls">
              <%= f.number_field :manpower_planning_id %>
            </div>
          </div>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span6">
          <div class="control-group">
            <%= f.label :description,:class => "control-label" %>
            <%#= raw custom_lable(@vacancy_master, :description) %>
            <div class="controls">
              <%= f.text_area(:description, size:"20x5")  %>
            </div>
          </div>
        </div>
        <div class="span6">
          <div class="control-group">
            <%= f.label :status,:class => "control-label" %>
            <%#= raw custom_lable(@vacancy_master, :status) %>
            <div class="controls">
              <%= f.text_field :status %>
            </div>
          </div>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span6">
          <div class="control-group">
            <%= raw custom_lable(@vacancy_master, :sourcing_strategy) %>
            <div class="controls">
              <%= f.text_field :sourcing_strategy %>
            </div>
          </div>
        </div>
        <div class="span6">
          <div class="control-group">
            <%= raw custom_lable(@vacancy_master, :hr_rep) %>
            <div class="controls">
              <%= f.text_field :hr_rep %>
            </div>
          </div>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span6">
          <div class="control-group">
            <%= f.label :hiring_manager,:class => "control-label" %>
            <div class="controls">
              <%= f.text_field :hiring_manager %>
            </div>
          </div>
        </div>
        <div class="span6">
          <div class="control-group">
            <%= raw custom_lable(@vacancy_master, :ctc_range_from) %>
            <div class="controls">
              <%= f.number_field :ctc_range_from %>
            </div>
          </div>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span6">
          <div class="control-group">
            <%= raw custom_lable(@vacancy_master, :ctc_range_to) %>
            <div class="controls">
              <%= f.number_field :ctc_range_to %>
            </div>
          </div>
        </div>
      </div>
      <hr>

      <% @fields = DynamicField.where(:oclass=>"VacancyMaster") %>
      <h3 class="header lighter blue">Dynamic Field</h3>
      <% @fields.each do |field| %>
          <div class="control-group">
            <%= f.label field.name.to_sym,:class => "control-label" %>
            <div class="controls">
              <%= f.send(field.type.to_sym, field.name.to_sym )%>
            </div>
          </div>
      <% end %>


      <div class="form-actions">
        <%= f.submit :class=>"btn btn-info" %>
      </div>
  <% end %>
</div>


