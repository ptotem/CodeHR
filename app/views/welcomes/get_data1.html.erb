<div class="table-header">Listing Selected Object's Field/Value</div>
<table id="report_table" summary="Code page support in different versions of MS Windows." rules="groups" frame="hsides" class="table table-striped table-bordered table-hover">
  <!--<caption>CODE-PAGE SUPPORT IN MICROSOFT WINDOWS</caption>-->
  <colgroup align="center"></colgroup>
  <colgroup align="left"></colgroup>
  <colgroup span="2" align="center"></colgroup>
  <colgroup span="3" align="center"></colgroup>
  <thead valign="top">
<tr>
  <% (@fields + @assarr).each do |i| %>
    <th><%= i %></th>
  <% end %>
</tr>
</thead>
<tbody id="dis_tab">
    <% @final_array.each do |trow| %>
        <%= trow["kras"] %>
        <tr>
          <% (@fields + @assarr).each do |tcol| %>
              <td>
                <% trow["kras"] %>
                <%= trow[tcol] %>
              </td>
          <% end %>
        </tr>
    <% end %>
</tbody>
</table>



<script src ="/assets/jquery.dataTables.min.js"></script>
<script>
    $(function(){
        $("#btnExport").click(function(e) {
            window.open('data:application/vnd.ms-excel,' + encodeURIComponent($('#dvData').html()));
            e.preventDefault();
        });



    });

    function check_modal_visibility(){
        if ($('#new_report_modal').is(':visible') == true){
            $('#new_report_btn').css('z-index','1000');
        }
    }

</script>

<div class="modal fade" id="new_report_modal" tabindex="-1" role="dialog" aria-labelledby="new_report_modal_Label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
          <span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">New Report</h4>
      </div>
      <div class="modal-body">

        <%= form_for(@d_report) do |f| %>
            <% if @d_report.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@d_report.errors.count, "error") %> prohibited this d_report from being saved:</h2>

                  <ul>
                    <% @d_report.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
            <% end %>

            <%= hidden_field_tag 'query_statement_id', @rqs.id %>

            <div class="row-fluid">
              <div class="span3">
                <%= f.label :report_date, :style=>"display: inline;" %>:
              </div>
              <div class="span6">
                <%= f.text_field :report_date %>
              </div>
            </div>

            <div class="row-fluid">
              <div class="span3">
                <%= f.label :reviewed_by, :style=>"display: inline;" %>:
              </div>
              <div class="span6">
                <%= f.text_field :reviewed_by %>
              </div>
            </div>

            <div class="row-fluid">
              <div class="span3">
                <%= f.label :cl_name, :style=>"display: inline;" %>:
              </div>
              <div class="span6">
                <%= f.text_field :cl_name %>
              </div>
            </div>

            <div class="row-fluid">
              <div class="span3">
                <%= f.label :cl_fields, :style=>"display: inline;" %>:
              </div>
              <div class="span6">
                <%= f.text_field :cl_fields %>
              </div>
            </div>

            <div class="row-fluid">
              <div class="span3">
                <%= f.label :object_hash, :style=>"display: inline;" %>:
              </div>
              <div class="span6">
                <%= f.text_field :object_hash %>
              </div>
            </div>

            <div class="row-fluid">
              <div class="span3">
                <%= f.label :report_name, :style=>"display: inline;" %>:
              </div>
              <div class="span6">
                <%= f.text_field :report_name %>
              </div>
            </div>

            <div class="actions">
              <%= f.submit %>
            </div>
            
        <% end %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>