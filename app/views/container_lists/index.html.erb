<h1>Listing Container Lists</h1>
<div class="row-fluid">
  <div class="span4">
    <%= link_to 'New Container List', new_container_list_path, :class=>"btn btn-info" %>
  </div>
</div>
<br>
<div class="row-fluid">
  <div class="span12">
    <div class="table-header">Listing Container List</div>
    <table id="container_list_table" class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
            <th>Action Type</th>
            <th>Link</th>
          </tr>
      </thead>
      <tbody>
          <% @container_lists.each do |container_list| %>
              <tr>
                <td><%= container_list.action_type %></td>
                <td><%= container_list.link %></td>
                <td><%= link_to 'Show', container_list %></td>
                <td><%= link_to 'Edit', edit_container_list_path(container_list) %></td>
                <td><%= link_to 'Destroy', container_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= javascript_include_tag "jquery.dataTables.min" %>
<%= javascript_include_tag "jquery.dataTables.zbootstrap" %>
<%= javascript_include_tag "custom_dataTable" %>


<script>
    $(function(){
        apply_dataTable('#container_list_table', '#container_list_table_wrapper','#container_list_table_length', '#container_list_table_filter');
    });
</script>
