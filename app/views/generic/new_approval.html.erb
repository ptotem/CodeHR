<%= form_tag :approved_form do |f| %>
    <h1><%= @form_config[:name] %></h1>
    <div class="tabbable">
      <% if !params[:process_id].nil? %>
          <%= hidden_field_tag :process_id, params[:process_id] %>
          <%= hidden_field_tag :seq, params[:seq] %>
      <% end %>
      <ul class="nav nav-tabs" id="myTab">
        <% count = 0 %>
        <% @fields[:tabs].map { |i, v| v[:name] }.each_with_index do |tab, index| %>
            <li><a data-toggle="tab" href="#dropdown<%= index %>"><%= tab %></a></li>
            <% count =count+1 %>
        <% end %>
      </ul>
      <div class="tab-content">
        <% @fields_name = @fields[:tabs].map { |i, v| v } %>
        <% count1 = 0 %>

        <% @fields_name.each_with_index do |tab_val, index| %>
          <% count1 =count1+1 %>
          <% if tab_val[:type]!="sub-form" %>
              <div id="dropdown<%= index %>" class="tab-pane">
                <div class="row-fluid">
                  <% @tab_val = tab_val[:cols].map { |i, v| v } %>
                  <% ti = 0 %>
                  <% if tab_val[:cols].has_key?(:type) %>
                      <%tab_val = tab_val[:cols].except(:type).map { |i, v| v } %>
                      <% @col_val = tab_val %>
                      <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                          <% tab_val.each_with_index do |col_val, index| %>
                              <% @col_val = col_val.map { |i, v| v } %>
                              <% @col_val.each_with_index do |cv, indi| %>
                                  <th><label for="<%= cv[:label] %>" class="control-label"><%= cv[:label] %></label></th>
                              <% end %>
                          <% end %>
                        </tr>
                        </thead>
                        <tbody class="my_body">
                        <% tab_val.each_with_index do |col_val, index| %>
                            <% @col_val = col_val.map { |i, v| v } %>
                            <% @col_val.each_with_index do |cv, indi| %>
                                <td>
                                  <% case cv[:type] %>
                                  <% when "text_field_tag" %>

                                      <% if cv[:attribute].include?('code') %>
                                          <%= text_field_tag "#{params[:model_name]}[#{cv[:attribute]}]", @cls[cv[:attribute]] ,:readonly=>true, :tabindex => ti.to_s, :style => "width:#{cv[:width]}px;", :disabled => true%>
                                      <% else %>
                                          <%= text_field_tag "#{params[:model_name]}[#{cv[:attribute]}]", @cls[cv[:attribute]], :tabindex => ti.to_s, :style => "width:#{cv[:width]}px;", :disabled => true %>
                                      <% end %>

                                  <% when "text_area_tag" %>
                                      <%= text_area_tag "#{params[:model_name]}[#{cv[:attribute]}]",@cls[cv[:attribute]], :tabindex => ti.to_s, :disabled => true %>
                                  <% when "date_field_tag" %>
                                      <input type="text" style="width:<%= cv[:width] %>px;" size="30" name="<%= "#{params[:model_name]}[#{cv[:attribute]}]" %>" id="<%= "#{params[:model_name]}[#{cv[:attribute]}]" %>" disabled="disabled" data-date-format="dd-mm-yyyy" class="span6 date-picker" tabindex = <%=ti.to_s %> >
                                  <% when "time_field_tag" %>
