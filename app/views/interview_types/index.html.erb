<div class="row-fluid">
  <div class="span4">
    <%= link_to 'New Interview Type', new_interview_type_path, :class=>"btn btn-info" %>
  </div>
</div>

<br>

<div class="row-fluid">
  <div class="span12">
    <div class="table-header">Listing Interview Types</div>
    <table id="interview_type_table" class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
      </thead>

      <tbody>
          <% @interview_types.each do |interview_type| %>
              <tr>
                <td><%= interview_type.name %></td>
                <td><%= interview_type.description %></td>
                <td><%= link_to 'Show', interview_type %></td>
                <td><%= link_to 'Edit', edit_interview_type_path(interview_type) %></td>
                <td><%= link_to 'Destroy', interview_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= javascript_include_tag "jquery.dataTables.min" %>
<%= javascript_include_tag "jquery.dataTables.zbootstrap" %>
<%= javascript_include_tag "custom_dataTable" %>


<script>
    $(function(){
        apply_dataTable('#interview_type_table', '#interview_type_table_wrapper','#interview_type_table_length', '#interview_type_table_filter');
    });
</script>
