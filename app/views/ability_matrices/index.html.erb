<%#= link_to 'New Ability matrix', new_ability_matrix_path %>

<div class="row-fluid">
  <div class="span12">
    <div class="table-header">Listing ability_matrices</div>
    <table id="group_master_table" class="table table-striped table-bordered table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @ability_matrices.each do |ability_matrix| %>
          <tr>
            <td><%= ability_matrix.name %></td>
            <td><%= link_to 'Show', ability_matrix %></td>
            <td><%= link_to 'Edit', edit_ability_matrix_path(ability_matrix) %></td>
            <td><%= link_to 'Destroy', ability_matrix, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= javascript_include_tag "jquery.dataTables.min" %>
<%= javascript_include_tag "jquery.dataTables.zbootstrap" %>
<%= javascript_include_tag "custom_dataTable" %>


<script>
    $(function(){
        apply_dataTable('#group_master_table', '#group_master_table_wrapper','#group_master_table_length', '#group_master_table_filter');
    });
</script>