<%= form_for(@ability_matrix) do |f| %>
  <% if @ability_matrix.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ability_matrix.errors.count, "error") %> prohibited this ability_matrix from being saved:</h2>

      <ul>
      <% @ability_matrix.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>


  <% end %>
    <div class="row-fluid">
      <div class="span6">
        <div class="control-group">
          <%= f.label :name %>
          <div class="controls">
            <%= f.text_field :name %>
          </div>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span6">
        <div class="control-group">
          <%= f.label :role_id %>
          <div class="controls">
            <%= f.select :role_id, options_from_collection_for_select(Role.all,'id','name',@ability_matrix.role_id), {:include_blank => "Select"}, {:class => "chzn-select", :multiple => true} %>
          </div>
        </div>
      </div>
      <div class="span6">
        <div class="control-group">
          <%= f.label :access_obj %>
          <div class="controls">
            <%= f.select :access_obj, options_from_collection_for_select(LeftPanel.all,'id','name',@ability_matrix.access_obj), {:include_blank => "Select"}, {:class => "chzn-select", :multiple=>true} %>
          </div>
        </div>
      </div>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script type="text/javascript" src="/assets/chosen.jquery.min.js"></script>
<script type="text/javascript" charset="utf-8">
    $(function(){

        $('.control-label').css('text-align','left');
        $(".chzn-select").chosen();
        $(".chzn-select-deselect").chosen({allow_single_deselect:true});
    });
</script>
