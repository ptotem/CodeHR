<div class="row-fluid">
  <div class="span4">
    <%= link_to 'New Document Master', new_document_master_path, :class=>"btn btn-info" %>
  </div>
</div>

<br>

<div class="row-fluid">
  <div class="span12">
    <div class="table-header">Listing Document Masters</div>
    <table id="document_master_table" class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
            <th>Doc Code</th>
            <th>Name</th>
            <th>Vc Needed</th>
            <th>Owner</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
      </thead>

      <tbody>
          <% @document_masters.each do |document_master| %>
              <tr>
                <td><%= document_master.doc_code %></td>
                <td><%= document_master.name %></td>
                <td><%= document_master.vc_needed %></td>
                <td><%= document_master.owner %></td>
                <td><%= link_to 'Show', document_master %></td>
                <td><%= link_to 'Edit', edit_document_master_path(document_master) %></td>
                <td><%= link_to 'Destroy', document_master, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= javascript_include_tag "jquery.dataTables.min" %>
<%= javascript_include_tag "jquery.dataTables.bootstrap" %>
<%= javascript_include_tag "custom_dataTable" %>


<script>
    $(function(){
        apply_dataTable('#document_master_table', '#document_master_table_wrapper','#document_master_table_length', '#document_master_table_filter');
    });
</script>
