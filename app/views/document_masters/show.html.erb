<p id="notice"><%= notice %></p>

<div class="row-fluid">
  <div class="offset1 span6">
    <div class="table-header">
      Document Master Details :-
    </div>
    <table class="table table-striped table-bordered table-hover">
      <tbody>
          <tr>
            <th>Doc Code</th>
            <td><%= @document_master.doc_code %></td>
          </tr>
          <tr>
            <th>Name</th>
            <td><%= @document_master.name %></td>
          </tr>
          <tr>
            <th>Vc Needed</th>
            <td><%= @document_master.vc_needed %></td>
          </tr>
          <tr>
            <th>Owner</th>
            <td><%= @document_master.owner %></td>
          </tr>
      </tbody>
    </table>
  </div>
</div>


<% if params[:action]=="doc_master_approval" %>
    <div class="row-fluid">
      <div class="offset4 span2">
        <%= button_tag "Approve", :class=>"btn btn-info", :id=>"approve_btn" %>
      </div>
    </div>
<% end %>


<script>
    $(function(){
        $("#approve_btn").on('click', function(){

            var doc_id = "<%= @document_master.id %>";

            var data = {doc_id: []};
            data["doc_id"].push(doc_id);

            $.ajax({
                url: "/approve_doc_master",
                type: "post",
                async: false,
                data: JSON.stringify(data),
                contentType: "application/json",
                success: function (data) {
                    console.log(data);
                }
            });

        });
    });
</script>

<%= link_to 'Edit', edit_document_master_path(@document_master) %> |
<%= link_to 'Back', document_masters_path %>
