<div class="row-fluid">
  <div class="span4">
    <%= link_to 'New Rating Scale', new_rating_scale_path, :class=>"btn btn-info" %>
  </div>
</div>

<br>

<div class="row-fluid">
  <div class="span12">
    <div class="table-header">Listing Rating Scales</div>
    <table id="rating_scales_table" class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
      </thead>

      <tbody>
          <% @rating_scales.each do |rating_scale| %>
              <tr>
                <td><%= rating_scale.name %></td>
                <td><%= rating_scale.description %></td>
                <td><%= link_to 'Show', rating_scale %></td>
                <td><%= link_to 'Edit', edit_rating_scale_path(rating_scale) %></td>
                <td><%= link_to 'Destroy', rating_scale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= javascript_include_tag "jquery.dataTables.min" %>
<%= javascript_include_tag "jquery.dataTables.bootstrap" %>
<%= javascript_include_tag "custom_dataTable" %>


<script>
    $(function(){
        apply_dataTable('#rating_scales_table', '#rating_scales_table_wrapper','#rating_scales_table_length', '#rating_scales_table_filter');
    });
</script>
