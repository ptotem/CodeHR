<div class="row-fluid">
  <%= nested_form_for(@rating_scale, :url => (@new ? generic_create_path(@rating_scale.class) : generic_update_path(@rating_scale.class,@rating_scale.id)), html: {class: "form-horizontal"}) do |f| %>
      <% if @rating_scale.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@rating_scale.errors.count, "error") %> prohibited this rating_scale from being saved:</h2>

            <ul>
              <% @rating_scale.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="row-fluid">
        <div class="span4">
          <div class="control-group">
            <%#= f.label :name,:class => "control-label" %>
            <label for="<%= @form[:name].to_s %>" class="control-label" style="text-align: center;"><%= @form[:name].to_s %></label>
            <div class="controls">
              <%= f.text_field :name %>
            </div>
          </div>
        </div>
        <div class="span8">
          <div class="control-group">
            <%#= f.label :description,:class => "control-label" %>
            <label for="<%= @form[:description].to_s %>" class="control-label" style="text-align: left;"><%= @form[:description].to_s %></label>
            <div class="controls">
              <%= f.text_area(:description, size:"200x5", :class=>"my_text") %>
            </div>
          </div>
        </div>
      </div>

      <hr>

      <%= f.fields_for :scales do |scales| %>
          <div class="row-fluid">
            <div class="span3">
              <div class="control-group">
                <%#= scales.label :scale_description,:class => "control-label" %>
                <label for="<%= @form[:scale_description].to_s %>" class="control-label" style="text-align: right;"><%= @form[:scale_description].to_s %></label>
                <div class="controls">
                  <%= scales.text_field :scale_description %>
                </div>
              </div>
            </div>

            <div class="span3">
              <div class="control-group">
                <%#= scales.label :range_from,:class => "control-label" %>
                <label for="<%= @form[:range_from].to_s %>" class="control-label" style="text-align: right;"><%= @form[:range_from].to_s %></label>
                <div class="controls">
                  <%= scales.text_field :range_from %>
                </div>
              </div>
            </div>

            <div class="span3">
              <div class="control-group">
                <%#= scales.label :range_to,:class => "control-label" %>
                <label for="<%= @form[:range_to].to_s %>" class="control-label" style="text-align: right;"><%= @form[:range_to].to_s %></label>
                <div class="controls">
                  <%= scales.text_field :range_to %>
                </div>
              </div>
            </div>

          </div>


          <div class="control-group">
            <div class="controls">
              <%= scales.link_to_remove "Remove this record" %>
            </div>
          </div>

      <% end %>
      <%= f.link_to_add "Add new record", :scales %>
      <hr>


      <% @fields = DynamicField.where(:oclass=>"RatingScale") %>
      <h3 class="header lighter blue">Dynamic Field</h3>
      <% @fields.each do |field| %>
          <div class="control-group">
            <%= f.label field.name.to_sym,:class => "control-label" %>
            <div class="controls">
              <%= f.send(field.type.to_sym, field.name.to_sym )%>
            </div>
          </div>
      <% end %>

      <% if !params[:process_id].nil? %>
          <%= hidden_field_tag :process_id, params[:process_id] %>
          <%= hidden_field_tag :seq, params[:seq] %>
      <% end %>

      <div class="form-actions">
        <%= f.submit @form_config[:submit], :class=>"btn btn-info" %>
      </div>
  <% end %>

</div>

<script>
  $(function(){
      //$('.control-label').css('text-align','left');
      $('.my_text').css('width','85%');

  })
</script>

