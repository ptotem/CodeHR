<div class="row-fluid">
  <div class="span4">
    <%= link_to 'New Rating', new_rating_path, :class=>"btn btn-info" %>
  </div>
</div>

<br>

<div class="row-fluid">
  <div class="span12">
    <div class="table-header">Listing Ratings</div>
    <table id="ratings_table" class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
            <th>Comments</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
      </thead>

      <tbody>
          <% @ratings.each do |rating| %>
              <tr>
                <td><%= rating.comments %></td>
                <td><%= link_to 'Show', rating %></td>
                <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
                <td><%= link_to 'Destroy', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= javascript_include_tag "jquery.dataTables.min" %>
<%= javascript_include_tag "jquery.dataTables.bootstrap" %>
<%= javascript_include_tag "custom_dataTable" %>


<script>
    $(function(){
        apply_dataTable('#ratings_table', '#ratings_table_wrapper','#ratings_table_length', '#ratings_table_filter');
    });
</script>
