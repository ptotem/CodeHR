<div class="row-fluid">
  <div class="span4">
    <%= link_to 'New Band master', new_band_master_path, :class=>"btn btn-info" %>
  </div>
</div>

<br>

<div class="row-fluid">
  <div class="span12">
    <div class="table-header">Listing Band Masters</div>

    <table id="band_master_table" class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
            <th>Band Code</th>
            <th>Band Name</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
      </thead>

      <tbody>
          <% @band_masters.each do |band_master| %>
              <tr>
                <td><%= band_master.band_code %></td>
                <td><%= band_master.band_name %></td>
                <td><%= link_to 'Show', band_master %></td>
                <td><%= link_to 'Edit', edit_band_master_path(band_master) %></td>
                <td><%= link_to 'Destroy', band_master, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
      </tbody>
    </table>

  </div>
</div>


<%= javascript_include_tag "jquery.dataTables.min" %>
<%= javascript_include_tag "jquery.dataTables.zbootstrap" %>
<%= javascript_include_tag "custom_dataTable" %>

<script>
    $(function(){
        apply_dataTable('#band_master_table', '#band_master_table_wrapper','#band_master_table_length', '#band_master_table_filter');
    });
</script>
