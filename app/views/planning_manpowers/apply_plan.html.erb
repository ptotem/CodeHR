<p id="notice"><%= notice %></p>
<%= form_tag :successful_apply, :multipart => true do |f| %>
<%= hidden_field_tag :vacancy_id, @currentVacancy.id %>
<div class="row-fluid">
  <div class="offset1 span6">
    <div class="table-header">
      Vacancy Details :-
    </div>
    <table class="table table-striped table-bordered table-hover">
      <tbody>
          <tr>
            <th>Code</th>
            <td><%= @currentVacancy.vacancy_code %></td>
          </tr>
          <tr>
            <th>Role</th>
            <td><%= @currentVacancy['role']['name'] %></td>
          </tr>
          <tr>
            <th>Sourcing Type</th>
            <td><%= @currentVacancy['sourcing_strategy'] %></td>
          </tr>
          <tr>
            <th>Department</th>
            <td><%=@currentVacancy['band_master']['band_name'] %></td>
          </tr>
          <tr>
            <th>CTC Range</th>
            <td><%="#{@currentVacancy['ctc_range_from']}" ' - ' "#{@currentVacancy['ctc_range_to']}"%></td>
          </tr>
          <tr>
            <th>Total Vacancy</th>
            <td><%=@currentVacancy.no_of_position %></td>
          </tr>
          <tr>
            <th>Accepted Candidates</th>
            <td><%= @currentVacancy['occupied_position'].to_i %></td>
          </tr>
          <tr>
            <th>Resume</th>
            <td> <%= file_field_tag :file %></td>
          </tr>
          <tr>
            <td colspan="2">
            <%= submit_tag "Submit", :class => "btn btn-primary btn-block"  %>
            </td>
          </tr>
          
      </tbody>
    </table>
  </div>
</div>
<% end %>
<%= link_to 'Back', openings_path %>

