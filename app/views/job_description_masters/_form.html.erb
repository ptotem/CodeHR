<div class="row-fluid">
  <%= nested_form_for(@job_description_master,html: {class: "form-horizontal"}) do |f| %>

      <% if @job_description_master.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@job_description_master.errors.count, "error") %> prohibited this job_description_master from being saved:</h2>

            <ul>
              <% @job_description_master.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="row-fluid">
        <div class="span6">
          <div class="control-group">
            <%#= f.label :job_code,:class => "control-label" %>
            <label for="<%= @form[:job_code].to_s %>" class="control-label"><%= @form[:job_code].to_s %></label>
            <div class="controls">
              <%= f.text_field :job_code %>
            </div>
          </div>
        </div>
        <div class="span6">
          <div class="control-group">
            <%#= f.label :job_title,:class => "control-label" %>
            <label for="<%= @form[:job_title].to_s %>" class="control-label"><%= @form[:job_title].to_s %></label>
            <div class="controls">
              <%= f.text_field :job_title %>
            </div>
          </div>
        </div>
      </div>

      <div class="row-fluid">
        <div class="span6">
          <div class="control-group">
            <%#= f.label :description,:class => "control-label" %>
            <label for="<%= @form[:description].to_s %>" class="control-label"><%= @form[:description].to_s %></label>
            <div class="controls">
              <%= f.text_area(:description, :size=>"40x4")  %>
            </div>
          </div>
        </div>
        <div class="span6">
          <div class="control-group">
            <%#= f.label :min_year_of_experience ,:class => "control-label"%>
            <label for="<%= @form[:min_year_of_experience].to_s %>" class="control-label"><%= @form[:min_year_of_experience].to_s %></label>
            <div class="controls">
              <%= f.number_field :min_year_of_experience %>
            </div>
          </div>
        </div>
      </div>

      <hr>

      <%= f.fields_for :qualifications do |qualifications| %>
          <div class="row-fluid">
            <div class="span6">
              <div class="control-group">
                <%#= qualifications.label :name,:class => "control-label" %>
                <label for="<%= @form[:qualification_name].to_s %>" class="control-label"><%= @form[:qualification_name].to_s %></label>
                <div class="controls">
                  <%= qualifications.text_field :name %>
                </div>
              </div>
            </div>
            <div class="span6">
              <div class="control-group">
                <%#= qualifications.label :description,:class => "control-label" %>
                <label for="<%= @form[:qualification_description].to_s %>" class="control-label"><%= @form[:qualification_description].to_s %></label>
                <div class="controls">
                  <%= qualifications.text_field :description %>
                </div>
              </div>
            </div>
          </div>

          <div class="row-fluid">
            <div class="span6">
              <div class="control-group">
                <%#= qualifications.label :marks,:class => "control-label" %>
                <label for="<%= @form[:qualification_marks].to_s %>" class="control-label"><%= @form[:qualification_marks].to_s %></label>
                <div class="controls">
                  <%= qualifications.text_field :marks %>
                </div>
              </div>
            </div>
            <div class="span6">
              <div class="control-group">
                <%#= qualifications.label :grade,:class => "control-label" %>
                <label for="<%= @form[:qualification_grade].to_s %>" class="control-label"><%= @form[:qualification_grade].to_s %></label>
                <div class="controls">
                  <%= qualifications.text_field :grade %>
                </div>
              </div>
            </div>
          </div>

        <div class="control-group">
          <div class="controls">
            <%= qualifications.link_to_remove "Remove this task" %>
          </div>
        </div>

      <% end %>
      <%= f.link_to_add "Qualifications", :qualifications %>
      <hr>


      <%= f.fields_for :manpower_plannings do |manpower_plannings| %>
        <div class="row-fluid">
          <div class="span12">
            <div class="control-group">
              <%= manpower_plannings.label :mp_code,:class => "control-label" %>
              <div class="controls">
                <%= manpower_plannings.text_field :mp_code %>
              </div>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span6">
            <div class="control-group">
              <%= manpower_plannings.label :period_from,:class => "control-label" %>
              <div class="controls">
                <%#= manpower_plannings.date_select :period_from %>
                <div class="row-fluid input-append date">
                  <%= manpower_plannings.text_field :period_from, :class=>"span6 date-picker" %>
                  <span class="add-on"><i class="icon-calendar"></i></span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span6">
            <div class="control-group">
              <%= manpower_plannings.label :period_to,:class => "control-label" %>
              <div class="controls">
                <%#= manpower_plannings.date_select :period_to %>
                <div class="row-fluid input-append date">
                  <%= manpower_plannings.text_field :period_to, :class=>"span6 date-picker" %>
                  <span class="add-on"><i class="icon-calendar"></i></span>
                </div>
              </div>
            </div>
          </div>
        </div>

          <div class="row-fluid">
            <div class="span6">
              <div class="control-group">
                <%= manpower_plannings.label :requested_by,:class => "control-label" %>
                <div class="controls">
                  <%= manpower_plannings.text_field :requested_by %>
                </div>
              </div>
            </div>
            <div class="span6">
              <div class="control-group">
                <%= manpower_plannings.label :final_approved_number,:class => "control-label" %>
                <div class="controls">
                  <%= manpower_plannings.text_field :final_approved_number %>
                </div>
              </div>
            </div>
          </div>

            <div class="control-group">
              <div class="controls">
                <%= manpower_plannings.link_to_remove "Remove this task" %>
              </div>
            </div>

      <% end %>
      <%= f.link_to_add "Manpower Plannings", :manpower_plannings %>
      <hr>


      <%= f.fields_for :vacancy_masters do |vacancy_masters| %>
          <div class="row-fluid">
            <div class="span6">
              <div class="control-group">
                <%= vacancy_masters.label :vacancy_code,:class => "control-label" %>
                <div class="controls">
                  <%= vacancy_masters.text_field :vacancy_code %>
                </div>
              </div>
            </div>
            <div class="span6">
              <div class="control-group">
                <%= vacancy_masters.label :manpower_planning_id,:class => "control-label" %>
                <div class="controls">
                  <%= vacancy_masters.text_field :manpower_planning_id %>
                </div>
              </div>
            </div>
          </div>

        <div class="row-fluid">
          <div class="span6">
            <div class="control-group">
              <%= vacancy_masters.label :description,:class => "control-label" %>
              <div class="controls">
                <%= vacancy_masters.text_field :description %>
              </div>
            </div>
          </div>
          <div class="span6">
            <div class="control-group">
              <%= vacancy_masters.label :status,:class => "control-label" %>
              <div class="controls">
                <%= vacancy_masters.text_field :status %>
              </div>
            </div>
          </div>
        </div>


        <div class="row-fluid">
          <div class="span6">
            <div class="control-group">
              <%= vacancy_masters.label :sourcing_strategy,:class => "control-label" %>
              <div class="controls">
                <%= vacancy_masters.text_field :sourcing_strategy %>
              </div>
            </div>
          </div>
          <div class="span6">
            <div class="control-group">
              <%= vacancy_masters.label :hr_rep,:class => "control-label" %>
              <div class="controls">
                <%= vacancy_masters.text_field :hr_rep %>
              </div>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span6">
            <div class="control-group">
              <%= vacancy_masters.label :hiring_manager,:class => "control-label" %>
              <div class="controls">
                <%= vacancy_masters.text_field :hiring_manager %>
              </div>
            </div>
          </div>
          <div class="span6">
            <div class="control-group">
              <%= vacancy_masters.label :ctc_range_from,:class => "control-label" %>
              <div class="controls">
                <%= vacancy_masters.text_field :ctc_range_from %>
              </div>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="span12">
            <div class="control-group">
              <%= vacancy_masters.label :ctc_range_to,:class => "control-label" %>
              <div class="controls">
                <%= vacancy_masters.text_field :ctc_range_to %>
              </div>
            </div>
          </div>
        </div>

        <div class="control-group">
          <div class="controls">
            <%= vacancy_masters.link_to_remove "Remove this task" %>
          </div>
        </div>

      <% end %>
      <%= f.link_to_add "Vacancy Masters", :vacancy_masters %>
      <hr>


      <% @fields = DynamicField.where(:oclass=>"JobDescriptionMaster") %>
      <h3 class="header lighter blue">Dynamic Field</h3>
      <% @fields.each do |field| %>
          <div class="control-group">
            <%= f.label field.name.to_sym,:class => "control-label" %>
            <div class="controls">
              <%= f.send(field.type.to_sym, field.name.to_sym )%>
            </div>
          </div>
      <% end %>


      <div class="form-actions">
        <%= f.submit @form_config[:submit], :class=>"btn btn-info" %>
      </div>
  <% end %>

</div>

