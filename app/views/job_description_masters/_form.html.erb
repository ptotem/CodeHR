          </div>

          <div class="control-group">
            <%= qualifications.label :grade,:class => "control-label" %>
            <div class="controls">
              <%= qualifications.text_field :grade %>
              <%= qualifications.link_to_remove "Remove this task" %>
            </div>
          </div>
      <% end %>
      <%= f.link_to_add "Qualifications", :qualifications %>
      <hr>


      <%= f.fields_for :manpower_plannings do |manpower_plannings| %>
