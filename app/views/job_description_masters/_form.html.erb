<div class="row-fluid">
  <%= form_for(@job_description_master,html: {class: "form-horizontal"}) do |f| %>

      <% if @job_description_master.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@job_description_master.errors.count, "error") %> prohibited this job_description_master from being saved:</h2>

            <ul>
              <% @job_description_master.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="control-group">
        <%= f.label :job_code,:class => "control-label" %>
        <div class="controls">
          <%= f.text_field :job_code %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :job_title,:class => "control-label" %>
        <div class="controls">
          <%= f.text_field :job_title %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :description,:class => "control-label" %>
        <div class="controls">
          <%= f.text_area :description %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :min_year_of_experience ,:class => "control-label"%>
        <div class="controls">
          <%= f.number_field :min_year_of_experience %>
        </div>
      </div>

      <% @fields = DynamicField.where(:oclass=>"JobDescriptionMaster") %>
      <h3 class="header lighter blue">Dynamic Field</h3>
      <% @fields.each do |field| %>
          <div class="control-group">
            <%= f.label field.name.to_sym,:class => "control-label" %>
            <div class="controls">
              <%= f.send(field.type.to_sym, field.name.to_sym )%>
            </div>
          </div>
      <% end %>


      <div class="form-actions">
        <%= f.submit :class=>"btn btn-info" %>
      </div>
  <% end %>

</div>


