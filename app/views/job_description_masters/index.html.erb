<div class="row-fluid">
  <div class="span4">
    <%= link_to 'New Job description master', new_job_description_master_path, :class=>"btn btn-info" %>
  </div>
</div>

<br>

<h1></h1>

<div class="row-fluid">
  <div class="span12">
    <div class="table-header">Listing Job Description Masters</div>
    <table id="job_description_master_table" class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
            <th>Job Code</th>
            <th>Job Title</th>
            <th>Description</th>
            <th>Min Year of Experience</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
      </thead>

      <tbody>
          <% @job_description_masters.each do |job_description_master| %>
              <tr>
                <td><%= job_description_master.job_code %></td>
                <td><%= job_description_master.job_title %></td>
                <td><%= job_description_master.description %></td>
                <td><%= job_description_master.min_year_of_experience %></td>
                <td><%= link_to 'Show', job_description_master %></td>
                <td><%= link_to 'Edit', edit_job_description_master_path(job_description_master) %></td>
                <td><%= link_to 'Destroy', job_description_master, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= javascript_include_tag "jquery.dataTables.min" %>
<%= javascript_include_tag "jquery.dataTables.zbootstrap" %>
<%= javascript_include_tag "custom_dataTable" %>


<script>
    $(function(){
        apply_dataTable('#job_description_master_table', '#job_description_master_table_wrapper','#job_description_master_table_length', '#job_description_master_table_filter');
    });
</script>
