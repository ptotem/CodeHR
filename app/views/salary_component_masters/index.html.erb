<div class="row-fluid">
  <div class="span4">
    <%= link_to 'New Salary Component Master', new_salary_component_master_path, :class=>"btn btn-info" %>
  </div>
</div>

<br>

<div class="row-fluid">
  <div class="span12">
    <div class="table-header">Listing Salary Component Masters</div>
    <table id="salary_component_master_table" class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
            <th>Name</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
      </thead>

      <tbody>
          <% @salary_component_masters.each do |salary_component_master| %>
              <tr>
                <td><%= salary_component_master.name %></td>
                <td><%= link_to 'Show', salary_component_master %></td>
                <td><%= link_to 'Edit', edit_salary_component_master_path(salary_component_master) %></td>
                <td><%= link_to 'Destroy', salary_component_master, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= javascript_include_tag "jquery.dataTables.min" %>
<%= javascript_include_tag "jquery.dataTables.zbootstrap" %>
<%= javascript_include_tag "custom_dataTable" %>


<script>
    $(function(){
        apply_dataTable('#salary_component_master_table', '#salary_component_master_table_wrapper','#salary_component_master_table_length', '#salary_component_master_table_filter');
    });
</script>
